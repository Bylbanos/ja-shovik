<%= form_for @article do |f| %>

    <% if @article.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@article.errors.count, "error") %> prohibited
            this article from being saved:
          </h2>
          <ul>
            <% @article.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <section class="hero-body">
      <div class="columns">
        <div class="column is-offset-2 is-8">
          <div class="field">
            <%= f.label :title, class: "label" %>
            <div class="control">
              <%= f.text_field :title, class:"input" %>
            </div>
          </div>
          <div class="field">
            <%= f.label :text, class:"label" %>
            <div class="control">
              <%= f.text_area :text, class: "textarea", rows: "22" %>
            </div>
          </div>
        </div>
      </div>
    </section>







    <section class="hero is-light">
      <div class="hero-body">
        <div class="columns">
          <div class="column is-offset-4 is-2">
              <%= f.submit "Create/save", class: "button is-medium is-fullwidth" %>
          </div>
          <div class="column is-2">
            <%= link_to 'Back', articles_path, class: "button is-medium is-fullwidth" %>
          </div>
        </div>
      </div>
    </section>



<% end %>